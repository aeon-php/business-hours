{
    "name": "aeon-php/business-hours",
    "type": "library",
    "description": "Abstraction allowing to define and check against business hours",
    "keywords": [
        "calendar",
        "immutable",
        "holidays",
        "business hours"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4.2 || ^8.0 || ^8.1",
        "aeon-php/calendar": ">=0.14.0"
    },
    "require-dev": {
        "aeon-php/calendar-holidays": ">=0.7.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aeon\\": [
                "src/Aeon"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aeon\\Calendar\\Tests\\": "tests/Aeon/Calendar/Tests/"
        }
    },
    "scripts": {
        "build": [
            "@static:analyze",
            "@test",
            "@test:mutation"
        ],
        "test": [
            "tools\/vendor\/bin\/phpunit"
        ],
        "test:mutation": [
            "tools\/vendor\/bin\/infection --threads=2"
        ],
        "static:analyze": [
            "tools\/vendor\/bin\/psalm --output-format=compact",
            "tools\/vendor\/bin\/phpstan analyze -c phpstan.neon",
            "tools\/vendor\/bin\/php-cs-fixer fix --dry-run"
        ],
        "cs:php:fix": "tools\/vendor\/bin\/php-cs-fixer fix",
        "tools:install": "composer install --working-dir=./tools",
        "post-install-cmd": [
            "@tools:install"
        ],
        "post-update-cmd": [
            "@tools:install"
        ]
    }
}
